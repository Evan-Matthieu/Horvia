<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/primary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nav_top"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/user_picture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/user_fill"
                app:layout_constraintBottom_toBottomOf="@+id/nav_top"
                app:layout_constraintLeft_toLeftOf="@+id/nav_top"
                app:layout_constraintTop_toTopOf="@+id/nav_top" />

            <ImageView
                android:layout_width="125dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="@+id/nav_top"
                app:layout_constraintBottom_toBottomOf="@+id/nav_top"
                app:layout_constraintLeft_toLeftOf="@+id/nav_top"
                app:layout_constraintRight_toRightOf="@+id/nav_top"
                android:src="@drawable/app_logo_black"/>

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_circle"
                android:backgroundTint="@color/secondary"
                android:drawableTop="@drawable/cart_item"
                android:src="@drawable/cart"
                android:textColor="@color/white"
                app:tint="#FFFFFF"
                app:itemIconTint="@color/white"
                app:itemTextColor="@color/white"

                app:layout_constraintBottom_toBottomOf="@+id/nav_top"
                app:layout_constraintRight_toRightOf="@+id/nav_top"
                app:layout_constraintTop_toTopOf="@+id/nav_top"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="15dp"
            android:padding="25dp"
            android:layout_weight="1"
            android:background="@drawable/home_main_categories"
            android:id="@+id/main_categories_list">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:padding="25dp"
            android:background="@drawable/home_farm_list"
            android:id="@+id/farm_list">
        </LinearLayout>


</LinearLayout>